#include <iostream>
using namespace std;


int main()
{
   
   int i,n ; 
   int arr[100] ;
   cout << "enter the elemets to find a num";
   cin>>n;
   cout<< endl ;
    for (i=0 ; i<n ; i++)
     { 
       cout<<"enter a number" <<i+1 <<":"; 
       cin>>arr[i]; 
       
      
    }
    for (i=1; i<n ; ++i)
    {
      if (arr[0]>arr[i])
      arr[0]=arr[i];
      
      
    }
    cout<<"smallest element="<<arr[0];
    
    return 0;
   
}
